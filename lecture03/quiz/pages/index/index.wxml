<!--index.wxml-->
<view class="container">
  It's view here.
</view>
<!-- cover-image -->
<cover-image src="../../assets/01.jpg">
</cover-image>

<!-- cover-view -->
<cover-view>
  It's cover-view here.
</cover-view>

<view>
  <!-- movable-area -->
  <movable-area style="width: 200px; height: 200px;background:blue;">
    <!-- movable-view -->
    <movable-view style="width: 50px; height: 50px; background:red;" direction="all">
    </movable-view>
  </movable-area>
</view>

<!-- scroll-view -->
<scroll-view style="height:50px" scroll-y="true">
  <view style="height:50px;background:blue"></view>
  <view style="height:50px;background:red"></view>
  <view style="height:50px;background:yellow"></view>
</scroll-view>
<!-- swiper -->
<swiper autoplay="true" 
indicator-dots="true"
interval="1000"
style="background:green;">
  <!-- swiper-item -->
  <swiper-item>
    <view style="background:red">123</view>
  </swiper-item>
  <swiper-item>
    <view style="background:blue">321</view>
  </swiper-item>
  <swiper-item>
    <view style="background:yellow">1234567</view>
  </swiper-item>
</swiper>
